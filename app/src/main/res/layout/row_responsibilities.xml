<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.zero1tec.portfolio.model.experience.details.InfoResponsibilities" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/_40sdp"
            android:id="@+id/btn_number"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:backgroundTint="@color/colorHeaderBackground"
            android:textColor="@color/colorHeaderTitle"
            android:textSize="@dimen/_15ssp"
            app:cornerRadius="@dimen/_7sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{model.numberResponsibilities}"
            tools:text="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_10sdp"
            tools:text="sadsadsadsad sadaasvdaas as  a a asdsadsadsadsa  sadas sada  adaasdasdas ada sad ad as a aa "
            android:lineSpacingExtra="@dimen/_10sdp"
            android:text="@{model.infoResponsibilities}"
            android:textSize="@dimen/_15sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/_10sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>