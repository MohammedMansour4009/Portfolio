<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.zero1tec.portfolio.model.experience.InfoExperience" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_experience"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/colorSurface"
        android:elevation="@dimen/_2sdp"

        app:cardCornerRadius="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <ImageView
                android:id="@+id/iv_app"
                imageUri="@{model.imageExperience}"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/collapsing" />




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_icon_app"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/_1sdp"
                app:layout_constraintStart_toEndOf="@id/iv_app"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/mohammed" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="@{model.nameExperience}"
                android:textColor="@color/colorHeaderTitle"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/iv_icon_app"
                app:layout_constraintTop_toTopOf="@id/iv_app"
                tools:text="Portfolio App 2.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_office"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@android:color/darker_gray"
                android:maxLines="1"
                android:paddingRight="@dimen/_5sdp"
                android:text="@{model.nameCompany}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                app:layout_constraintTop_toBottomOf="@id/iv_icon_app"

                tools:text="sdad asdsad sadsa  dasdsaasd  assa d sad  aasdsa a a asd as q asdas a  as sad   asdasda sda d da sd ad a asd asda  asdsadsa d asd sad qwasd as" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_company_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_map"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@android:color/darker_gray"
                android:maxLines="1"
                android:paddingRight="@dimen/_5sdp"
                android:text="@{model.companyLocation}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                app:layout_constraintTop_toBottomOf="@id/tv_company_name"

                tools:text="sdad asdsad sadsa  dasdsaasd  assa d sad  aasdsa a a asd as q asdas a  as sad   asdasda sda d da sd ad a asd asda  asdsadsa d asd sad qwasd as" />

            <TextView
                android:id="@+id/tv_made"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/calendar2"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@{model.madeExperience}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                tools:text=" ssadsad  dsad ad as asdasd  sad" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>