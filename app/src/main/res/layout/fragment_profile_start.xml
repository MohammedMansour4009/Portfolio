<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.zero1tec.portfolio.model.profile.Profile" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSurface"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bach"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:fitsSystemWindows="false"
            android:scaleType="centerCrop"
            android:src="@drawable/collapsing"
            app:layout_collapseMode="pin"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@{model.textWelcome}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nice to meet you " />


        <TextView
            android:id="@+id/iv_ic"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/ic_motion_sensor"
            app:layout_constraintEnd_toStartOf="@id/tv_nice"
            app:layout_constraintTop_toTopOf="@id/tv_nice" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_app"
            imageUri="@{model.image}"
            android:layout_width="109dp"
            android:layout_height="111dp"
            android:layout_marginTop="@dimen/_40sdp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="@dimen/_2sdp"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/profile"

            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{model.textName}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20sdp"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_app"
            tools:text="Tumur.b (Alex) " />

        <TextView
            android:id="@+id/tv_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:text="@{model.textWork}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="Tumur.b (Alex) " />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_more_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bach"
            tools:listitem="@layout/row_profile" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_sheet"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:backgroundTint="@color/colorPrimary"
            app:cornerRadius="@dimen/_40sdp"
            app:icon="@drawable/ic_read_more"
            app:iconGravity="textEnd"
            app:iconTint="@android:color/white"
            app:layout_behavior="com.example.portfolio.utils.ScrollAwareFABBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>