<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.portfolio.model.portfolio.details.PortfolioDetails" />

    </data>


        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/colorSurface"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSurface"
                tools:context=".ui.fragment.Portfolio.details.PortfolioDetailsFragment"
                android:id="@+id/constraint_layout_portfolio_details_fragment"
                >


                <com.github.florent37.shapeofview.shapes.ArcView
                    android:id="@+id/sf_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shape_arc_height="20dp"
                    app:shape_arc_position="bottom">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_background"
                        imageUri="@{model.image}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:background="@drawable/back" />
                </com.github.florent37.shapeofview.shapes.ArcView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_app"
                    imageUri="@{model.icon}"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="@dimen/_2sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sf_view"
                    tools:background="@drawable/profile"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@{model.name}"
                    android:textColor="@color/colorHeaderTitle"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintStart_toEndOf="@id/iv_app"
                    app:layout_constraintTop_toTopOf="@id/iv_app"
                    tools:text="Portfolio App 2.0"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableLeft="@drawable/calendar2"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@{model.time}"
                    android:textColor="@color/colorOnSurface"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintStart_toEndOf="@id/iv_app"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_app"
                    tools:text="Nav 2018 - Aug 2019 | 9 month()s" />

                <LinearLayout
                    android:id="@+id/ll_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/iv_app">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Githup"
                        android:textColor="@color/colorStrokeButton"
                        app:cornerRadius="@dimen/_2sdp"
                        app:icon="@drawable/ic_github"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_10sdp"
                        app:iconTint="@color/colorStrokeButton"
                        app:strokeColor="@color/colorStrokeButton"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/button_full_color"
                        android:text="Play Store"
                        android:textColor="@color/colorStrokeButton"
                        app:icon="@drawable/ic_play_store"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_10sdp"
                        app:iconTint="@android:color/white" />
                </LinearLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorHeaderBackground2"

                    app:layout_constraintTop_toBottomOf="@id/ll_button" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_skills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_line"
                    tools:itemCount="3"
                    tools:listitem="@layout/row_skills"


                    />

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorHeaderBackground2"

                    app:layout_constraintTop_toBottomOf="@id/rv_skills" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_skills"
                    tools:itemCount="3"
                    tools:listitem="@layout/row_image_app" />

                <View
                    android:id="@+id/v_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorHeaderBackground2"
                    app:layout_constraintTop_toBottomOf="@id/rv_image_app" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:lineSpacingExtra="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@{model.description}"
                    android:textColor="@color/colorHeaderTitle"
                    app:layout_constraintTop_toBottomOf="@id/rv_image_app" />

                <View
                    android:id="@+id/v_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorHeaderBackground2"
                    app:layout_constraintTop_toBottomOf="@id/tv_company_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_more_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:lineSpacingExtra="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@{model.moreDescription}"
                    android:textColor="@color/colorHeaderTitle"
                    app:layout_constraintTop_toBottomOf="@id/v_line3" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

</layout>