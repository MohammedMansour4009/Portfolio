<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.portfolio.model.experience.details.ExperienceDetails" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.experience.details.ExperienceDetailsFragment"
        android:background="@color/colorSurface"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint_experience_details_fragment"
            android:background="@color/colorSurface"

            >


            <com.github.florent37.shapeofview.shapes.ArcView
                android:id="@+id/sf_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:shape_arc_height="20dp"
                app:shape_arc_position="bottom">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_background"
                    imageUri="@{model.background}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:background="@drawable/back" />
            </com.github.florent37.shapeofview.shapes.ArcView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_app"
                imageUri="@{model.icon}"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_10sdp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sf_view"
                tools:background="@drawable/collapsing" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_icon_app"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/mohammed"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/_1sdp"
                app:layout_constraintStart_toEndOf="@id/iv_app"
                app:layout_constraintTop_toTopOf="@id/iv_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="@{model.name}"
                android:textColor="@color/colorHeaderTitle"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/iv_icon_app"
                app:layout_constraintTop_toTopOf="@id/iv_app"
                tools:text="Portfolio App 2.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_office"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@android:color/darker_gray"
                android:maxLines="1"
                android:paddingRight="@dimen/_5sdp"
                android:text="@{model.nameCompany}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                app:layout_constraintTop_toBottomOf="@id/iv_icon_app"
                tools:text="sdad asdsad sadsa  dasdsaasd  assa d sad  aasdsa a a asd as q asdas a  as sad   asdasda sda d da sd ad a asd asda  asdsadsa d asd sad qwasd as" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_company_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_map"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@android:color/darker_gray"
                android:maxLines="1"
                android:paddingRight="@dimen/_5sdp"
                android:text="@{model.place}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                app:layout_constraintTop_toBottomOf="@id/tv_company_name"

                tools:text="sdad asdsad sadsa  dasdsaasd  assa d sad  aasdsa a a asd as q asdas a  as sad   asdasda sda d da sd ad a asd asda  asdsadsa d asd sad qwasd as" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_made"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/calendar2"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@{model.time}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                app:layout_constraintTop_toBottomOf="@id/tv_company_location"
                tools:text=" ssadsad  dsad ad as asdasd  sad" />


            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/iv_app">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_play_store"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Play Store"
                    android:textAllCaps="false"
                    android:textColor="@color/colorStrokeButton"
                    app:cornerRadius="@dimen/_2sdp"
                    app:icon="@drawable/ic_play_store"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/_10sdp"
                    app:iconTint="@color/colorStrokeButton"
                    app:strokeColor="@color/colorStrokeButton"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_github"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_full_color"
                    android:text="Website"
                    android:textAllCaps="false"
                    android:textColor="@color/colorStrokeButton"
                    app:icon="@drawable/ic_category_web"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/_10sdp"
                    app:iconTint="@android:color/white" />
            </LinearLayout>

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorHeaderBackground2"

                app:layout_constraintTop_toBottomOf="@id/ll_button" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_experience_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorHeaderBackground"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Info"
                android:textAllCaps="true"
                android:textColor="@color/colorHeaderTitle"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintTop_toBottomOf="@id/ll_button" />

            <TextView
                android:id="@+id/tv_info_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSurface"
                android:lineSpacingExtra="@dimen/dimen_12sp"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@{model.info}"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_experience_static"
                tools:text="asdddddddddddddddddddddsadddddddddddddddddddddddddddddddddddddsaddd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_responsibilities_experience_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorHeaderBackground"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@{model.titleResponsibilities}"
                android:textAllCaps="true"
                android:textColor="@color/colorHeaderTitle"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintTop_toBottomOf="@id/tv_info_experience"
                tools:text="responsibilities" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_responsibilities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_responsibilities_experience_static"
                tools:listitem="@layout/row_responsibilities" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorHeaderBackground"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@{model.titleLinks}"
                android:textAllCaps="true"
                android:textColor="@color/colorHeaderTitle"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintTop_toBottomOf="@id/rv_responsibilities"
                tools:text="Links" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_links"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_links"

                tools:listitem="@layout/row_links" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorHeaderBackground"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorHeaderTitle"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintTop_toBottomOf="@id/rv_links"
                android:text="Map" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:id="@+id/mapContainer"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                app:layout_constraintTop_toBottomOf="@id/tv_map"
                tools:context=".MainActivity">

            </fragment>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
