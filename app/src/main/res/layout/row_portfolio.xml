<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.portfolio.model.portfolio.InfoApp" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"

            >

            <ImageView
                android:id="@+id/iv_app"
                imageUri="@{model.imageApp}"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/collapsing"
                android:scaleType="centerCrop"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_icon_app"
                imageUri="@{model.iconApp}"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/iv_app"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/ic_profile_placeholder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@{model.nameApp}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@id/iv_icon_app"
                app:layout_constraintTop_toTopOf="@id/iv_app"
                tools:text="Portfolio App 2.0"
                android:paddingRight="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@{model.descriptionApp}"
                android:textSize="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                app:layout_constraintTop_toBottomOf="@id/iv_icon_app"
                app:layout_constraintBottom_toTopOf="@id/tv_made"

                tools:text="sdad asdsad sadsa  dasdsaasd  assa d sad  aasdsa a a asd as q asdas a  as sad   asdasda sda d da sd ad a asd asda  asdsadsa d asd sad qwasd as" />

            <TextView
                android:id="@+id/tv_made"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/calendar2"
                android:text="@{model.madeApp}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_app"
                tools:text=" ssadsad  dsad ad as asdasd  sad"
                android:textSize="@dimen/_8sdp"
                android:drawablePadding="@dimen/_5sdp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>