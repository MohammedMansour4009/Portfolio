<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.portfolio.model.profile.Profile" />

    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_bach"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="false"
                android:scaleType="centerCrop"
                android:src="@drawable/collapsing"
                app:layout_collapseMode="pin"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:background="@color/colorPrimary"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nice"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@{model.textWelcome}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Nice to meet you " />


            <TextView
                android:visibility="gone"
                android:id="@+id/iv_ic"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:layout_constraintEnd_toStartOf="@id/tv_nice"
                app:layout_constraintTop_toTopOf="@id/tv_nice"
                android:background="@drawable/ic_motion_sensor"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_app"

                imageUri="@{model.image}"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/_2sdp"
                app:layout_collapseMode="pin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/profile"
                android:layout_marginStart="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_3sdp"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@{model.textName}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10sdp"
                app:layout_collapseMode="pin"
                app:layout_constraintStart_toEndOf="@id/iv_app"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Tumur.b (Alex) "
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="@{model.textWork}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:text="Tumur.b (Alex) " />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_more_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/iv_bach"
                tools:listitem="@layout/row_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                android:nestedScrollingEnabled="false"
                />

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/b_sheet"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:backgroundTint="@color/colorPrimary"
                app:cornerRadius="@dimen/_40sdp"
                app:icon="@drawable/ic_read_more"
                app:iconTint="@android:color/white"
                app:layout_behavior="com.example.portfolio.utils.ScrollAwareFABBehavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:iconGravity="textEnd"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>