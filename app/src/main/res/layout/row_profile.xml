<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.zero1tec.portfolio.model.profile.MoreInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHeaderBackground"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@{model.textTitle}"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceHeadline1"
            android:textColor="@color/colorHeaderTitle"
            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="OH HELLO THERE "

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSurface"
            android:lineSpacingExtra="@dimen/dimen_12sp"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@{model.textInfo}"
            android:textColor="@color/colorOnSurface"

            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_options"
            tools:text="asdddddddddddddddddddddsadddddddddddddddddddddddddddddddddddddsaddd" />
    </LinearLayout>
</layout>